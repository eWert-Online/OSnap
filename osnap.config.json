{
  "baseUrl": "",
  "fullScreen": true,
  "threshold": 20,
  "parallelism": 3,
  "testPattern": "test/**/*.osnap.json",
  "ignorePatterns": ["node_modules", "_esy", "esy.lock"],
  "defaultSizes": [
    { "width": 1920, "height": 1080 },
    { "width": 1600, "height": 900 },
    { "width": 768, "height": 1024 },
    { "width": 320, "height": 568 }
  ],
  "snapshotDirectory": "./__image-snapshots__",
  "diffPixelColor": {
    "r": 0,
    "g": 255,
    "b": 0
  }
}
