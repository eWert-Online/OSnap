{
  "name": "osnap",
  "version": "0.0.1",
  "description": "A Snapshot tool",
  "license": "MIT",
  "esy": {
    "build": "dune build -p #{self.name}",
    "buildDev": "refmterr dune build --promote-install-files --root . --only-package #{self.name}",
    "release": {
      "rewritePrefix": true,
      "bin": {
        "osnap": "osnap"
      },
      "includePackages": [
        "osnap",
        "esy-libpng",
        "esy-zlib"
      ]
    },
    "buildEnv": {
      "ODOC_SYNTAX": "re"
    }
  },
  "scripts": {
    "run": "esy x OSnap",
    "doc": "esy dune build @doc"
  },
  "dependencies": {
    "@opam/base64": "3.5.0",
    "@opam/camlimages": "*",
    "@opam/cmdliner": "1.0.4",
    "@opam/fileutils": "0.6.3",
    "@opam/lwt": "5.3.0",
    "@opam/lwt_ppx": "2.0.1",
    "@opam/ocamlfind": "1.8.1",
    "@opam/ppx_yojson_conv": "v0.14.0",
    "@opam/re": "*",
    "@opam/uri": "4.1.0",
    "@opam/websocket": "2.14",
    "@opam/websocket-lwt-unix": "2.14",
    "@opam/yojson": "1.7.0",
    "@reason-native/console": "*",
    "@reason-native/pastel": "*",
    "odiff": "*"
  },
  "devDependencies": {
    "@esy-ocaml/reason": ">= 3.6.0 < 4.0.0",
    "@opam/dune": "< 3.0.0",
    "@opam/merlin": "*",
    "@opam/ocaml-lsp-server": "1.4.0",
    "@opam/odoc": "*",
    "ocaml": ">= 4.2.0 < 4.11.0",
    "refmterr": "*"
  },
  "resolutions": {
    "@opam/re": "ocaml/ocaml-re:re.opam#09c2745a2d8d1517b3d597396e82e122903b0017",
    "odiff": "ewert-online/odiff#6f55f9181068e5728662001eac1147352f285863",
    "@opam/camlimages": {
      "source": "git+https://gitlab.com/camlspotter/camlimages.git:camlimages.opam#9d8dce704a335b7c568e8d3692fe086b1d084870",
      "override": {
        "dependencies": {
          "esy-libpng": "dmtrKovalenko/esy-libpng#a8f4da71d87e5bfbf567f472c0e52c95db90e04d"
        }
      }
    }
  }
}
