{
  "name": "osnap",
  "version": "0.0.1",
  "description": "A Snapshot tool",
  "license": "MIT",
  "esy": {
    "build": "dune build -p #{self.name}",
    "buildDev": "refmterr dune build --promote-install-files --root . --only-package #{self.name}",
    "release": {
      "rewritePrefix": true,
      "bin": {
        "osnap": "OSnap"
      }
    },
    "buildEnv": {
      "ODOC_SYNTAX": "re"
    }
  },
  "scripts": {
    "run": "esy x OSnap",
    "test": "esy x RunTests.exe",
    "doc": "esy dune build @doc"
  },
  "dependencies": {
    "@opam/cmdliner": "1.0.4",
    "@opam/lwt": "5.3.0",
    "@opam/lwt_ppx": "2.0.1",
    "@opam/yojson": "1.7.0",
    "@reason-native/console": "*",
    "@reason-native/pastel": "*",
    "odiff": "*"
  },
  "devDependencies": {
    "@esy-ocaml/reason": ">= 3.6.0 < 4.0.0",
    "@opam/dune": "< 3.0.0",
    "@opam/merlin": "*",
    "@opam/ocaml-lsp-server": "1.4.0",
    "@opam/odoc": "*",
    "ocaml": ">= 4.2.0 < 4.11.0",
    "refmterr": "*"
  },
  "resolutions": {
    "odiff": "dmtrKovalenko/odiff#2bc9c67401fd0fe4615d271a8d1cd05e9058bc30"
  }
}
