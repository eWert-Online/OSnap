{
  "name": "osnap",
  "version": "0.0.1",
  "description": "A Snapshot tool",
  "license": "MIT",
  "esy": {
    "build": "dune build -p #{self.name}",
    "buildDev": "dune build --promote-install-files --root . --only-package #{self.name}",
    "release": {
      "rewritePrefix": true,
      "bin": {
        "osnap": "osnap"
      },
      "includePackages": [
        "osnap",
        "esy-libpng",
        "esy-zlib"
      ]
    },
    "buildEnv": {
      "ODOC_SYNTAX": "re"
    }
  },
  "scripts": {
    "run": "esy x OSnap",
    "doc": "esy dune build @doc"
  },
  "dependencies": {
    "@opam/lwt": "5.4.0",
    "@opam/ocamlfind": "1.8.1",
    "@opam/websocket": "2.14",
    "@opam/websocket-lwt-unix": "2.14"
  },
  "devDependencies": {
    "@opam/dune": "< 3.0.0",
    "ocaml": "~4.12.0"
  }
}
